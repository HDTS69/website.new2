{
  "name": "simple-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:hmr": "node scripts/dev-hmr.js",
    "clean-dev": "bash scripts/clean-start.sh",
    "full-clean": "bash scripts/clean-start.sh --full",
    "prebuild": "node scripts/fetch-instagram.js || echo 'Instagram fetch failed, continuing build'",
    "build": "npm run optimize-images && npm run generate-sitemap && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "fetch-instagram": "node scripts/fetch-instagram.js || echo 'Instagram fetch failed, continuing'",
    "optimize-images": "node scripts/optimize-images.js || echo 'Image optimization failed, continuing'",
    "generate-sitemap": "node scripts/generate-sitemap.js || echo 'Sitemap generation failed, continuing'",
    "analyze": "ANALYZE=true next build",
    "test-deploy": "netlify deploy --build --dir=out",
    "postbuild": "next-sitemap --config next-sitemap.config.js || echo 'Sitemap generation failed, continuing'"
  },
  "dependencies": {
    "@builder.io/partytown": "0.10.3",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@supabase/supabase-js": "^2.48.1",
    "@tsparticles/engine": "^3.8.1",
    "@tsparticles/react": "^3.0.0",
    "@tsparticles/slim": "^3.8.1",
    "aos": "^3.0.0-beta.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.4.7",
    "lucide-react": "^0.475.0",
    "next": "15.2.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-fast-marquee": "^1.6.5",
    "simplex-noise": "^4.0.3",
    "styled-components": "6.1.15",
    "tailwind-merge": "^3.0.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.2.0",
    "@playwright/test": "^1.50.1",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@tailwindcss/forms": "^0.5.7",
    "@types/aos": "^3.0.7",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/styled-components": "5.1.34",
    "autoprefixer": "10.4.20",
    "critical": "7.2.1",
    "css-minimizer-webpack-plugin": "7.0.0",
    "date-fns": "^4.1.0",
    "dotenv": "16.4.7",
    "eslint": "9.21.0",
    "eslint-config-next": "^14.2.24",
    "glob": "10.4.5",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "purgecss": "7.0.2",
    "rollup": "^4.12.0",
    "rollup-plugin-postcss": "^4.0.2",
    "sharp": "^0.33.3",
    "tailwindcss": "^3.3.5",
    "typescript": "5.7.3"
  }
}
